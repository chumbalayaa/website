<div class="container"> 
  <div class="col-sm-6 col-sm-offset-3">
    <div class="well text-center">
      <h1>Welcome to StockExchange</h1>
    </div><hr>  
  </div>
  <div id="signupbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    {{#if error}}
      <div class="alert alert-danger">All fields were not filled or username already exists.</div>
    {{/if}}
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Sign Up</div>
      </div> 
      <div class="panel-body" style="padding-top:30px">
        <form id="signupform" action="/users/signup" method="post"> 
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input type="text" class="form-control" id="name" placeholder="Username">
          </div>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input type="password" class="form-control" id="password" placeholder="Password">
          </div>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input type="password" class="form-control" id="reenter" placeholder="Confirm Password">
          </div>

          <button id='signup_button' type="submit" class="btn btn-info">Register</button>
          <hr>
          <div class="form-group">
            <div class="col-md-12 control">
              <div style="font-size:85%" >
                Already have an account? 
                <button type='button' id='tologin' class="btn btn-link btn-sm">Log In</button>
              </div>
            </div>
          </div>                    
        </form>
      </div>
    </div>           
  </div> 
</div>   